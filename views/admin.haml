- unless (@lines.length > 0)
    %p No lines yet!
- else
    %ul.admin-list
        - @lines.each do |line|
            %li
                #{line.content} -
                %a{:href => "/admin/delete/#{line.id}", :onclick => "return confirm('Are you sure?');"} Delete

%form.admin-add{:method => "POST"}
    %fieldset
        %legend Add lines
        - (1..5).each do |counter|
            %label
                %input{:type => "text", :name => "line#{counter}"}
        %label
            %button{:type => "submit"} Add